---
import CaseStudyLayout from "../../layouts/CaseStudyLayout.astro";

const page = {
title: "L.A. ballot map",
intro: [
"Enter your address to find the nearest ballot drop boxes and voting centers, with hours, distances and directions."
],
links: [{ label: "Live project", href: "https://www.latimes.com/projects/2022-california-primary-election-polling-places-voting-center-ballot-drop-boxes/?terminal=true" }],
heroImage: "/demos/lat-ballot/1.png",
}                                                                                                                                                                                                            ;

const gridImages = [


]   ;
---

<CaseStudyLayout title={`${page.title} â€” Szu Yu Chen`}>
{/* HERO */}
<header class="csHero">
<div class="csHero__text">
<h1 class="csHero__title">{page.title}</h1>

{page.intro.map((p) => <p class="csHero__p">{p}</p>)}

<div class="csHero__links">
{page.links.map((l) => (
<a class="csLink" href={l.href} target="_blank" rel="noreferrer">
{l.label}
</a>
))}
</div>
</div>

<figure class="csHero__media">
<img src={page.heroImage} alt="" loading="lazy" decoding="async" />
</figure>
</header>

{/* BIG IMAGE + SIDE CAPTION */}
<section class="csBlock">
<figure class="csFrame">
<img src="/demos/lat-ballot/3.mov" alt="" loading="lazy" decoding="async" />
</figure>
<aside class="csAside">
The map shows voting centers and ballot drop boxes across Southern California.
</aside>
</section>

{/* BIG IMAGE + SIDE CAPTION */}
<section class="csBlock-imgR">

<aside class="csAside">
Enter your address to see the nearest locations, complete with hours, distance and travel time.
</aside>
<figure class="csFrame">
<img src="/demos/lat-ballot/4.mov" alt="" loading="lazy" decoding="async" />
</figure>
</section>



{/* FINAL WIDE FRAME */}
<section class="csCenter">
<figure class="csFrame csFrame--letterbox">
<img src="/demos/lat-ballot/5.png" alt="" loading="lazy" decoding="async" />
</figure>
<p class="csCaption csCaption--center"></p>
</section>
</CaseStudyLayout>
