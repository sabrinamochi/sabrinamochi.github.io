---
import BaseLayout from "../layouts/BaseLayout.astro";

const featured = [
{
title: "Tax bill calculator",
subtitle: "A calculator powered by precomputed model outputs.",
built: ["Interactive tools", "Graphics & charts"],
stack: ["Python", "JavaScript", "React", "D3"],
demo: "/demos/tcja/1.png",
caseStudyHref: "/work/tcja",
originalHref: "https://www.washingtonpost.com/business/interactive/2025/trump-big-beautiful-bill-your-taxes-cuts/",
},
{
title: "Debt game",
subtitle: "Swipe through policy cards, weigh tradeoffs, and watch the fiscal math update in real time.",
built: ["Maps", "Interactive tools"],
stack: ["JavaScript", "React", "D3"],
demo: "/demos/debt/vid.mov",
caseStudyHref: "/work/debt",
},
{
title: "Eclipse calculator",
subtitle: "An interactive eclipse calculator that personalizes the sky.",
built: ["Graphics & charts", "Interactive tools"],
stack: ["JavaScript", "D3", "React"],
demo: "/demos/eclipse/vid.mov",
caseStudyHref: "/work/eclipse",
},
{
title: "AI beauty",
subtitle: "An interactive eclipse calculator that personalizes the sky.",
built: ["Graphics & charts", "Interactive tools"],
stack: ["JavaScript", "React", "DALL-E", "Stable diffusion"],
demo: "/demos/ai-attractive/1.png",
caseStudyHref: "/work/ai-attractive",
},
]                                                                                                      ;

---

<BaseLayout title="Szu Yu Chen">
<nav slot="navigator" class="topNav">
<div class="topNav__inner">
<a class="topNav__brand" href="/">Szu Yu Chen</a>
<div class="csNav__links">
      <a href="/#featured">work</a>
      <a href="https://www.linkedin.com/in/szu-yu-chen-435760159/">info</a>
    </div>
</div>
</nav>

<header slot="header" class="hero">
<div class="hero__inner">
<div class="hero__copy">
<h1>I build interactive explainers and data tools.</h1>
<p class="hero__lede">
I design and build tools that help readers understand complex topics.
</p>


</div>

</div>
</header>

<main slot="main">
<section id="featured" class="section">
<div class="section__head">
<h2>Selected work</h2>
</div>

<div class="projectGrid">
  {featured.map((p) => (
    <a class="projectTile" href={p.caseStudyHref} aria-label={`Open case study: ${p.title}`}>
      <div class="projectTile__media" aria-hidden="true">
        <img class="projectTile__img" src={p.demo} alt="" loading="lazy" decoding="async" />
      </div>

      <div class="projectTile__overlay">
        <h3 class="projectTile__title">{p.title}</h3>
        <p class="projectTile__subtitle">{p.subtitle}</p>

        <div class="projectTile__meta">


          <div class="projectTile__chips" aria-label="Tech stack">
            {p.stack.slice(0, 4).map((x) => (
              <span class="chip chip--tile">{x}</span>
            ))}
          </div>
        </div>

        <div class="projectTile__cta" aria-hidden="true">
          <span>Case study</span>
          <span class="projectTile__arrow">→</span>
        </div>
      </div>
    </a>
  ))}
</div>

</section>

<section class="section section--soft">
<div class="section__head">
<h2>What I build</h2>
<p>
Front-end experiences and data tools designed for clarity and trust — built to perform on deadline and at scale.
</p>
</div>

<div class="capGrid">
<div class="capCard">
<h3>Interactive tools</h3>
<p>Calculators, dashboards, scenario explorers, and constraint-driven interfaces that avoid misleading precision.</p>
</div>

<div class="capCard">
<h3>Graphics charts</h3>
<p>D3-driven charts, animated explainers, scrollytelling components, and reusable visual primitives.</p>
</div>

<div class="capCard">
<h3>Maps</h3>
<p>MapLibre-based interactives, spatial storytelling, tiling/performance strategies, and geodata handling.</p>
</div>

<div class="capCard">
<h3>Data + build pipeline</h3>
<p>Python analysis + preprocessing, clean handoff formats, and fast front-end delivery with documented assumptions.</p>
</div>
</div>
</section>

<footer class="footer">
<div class="footer__inner">
<div class="footer__left">© {new Date().getFullYear()} Szu Yu Chen</div>
<div class="footer__right">
<a href="mailto:szuyuchen0101@gmail.com">Email</a>
<span class="dot">•</span>

<a href="https://www.linkedin.com/in/szu-yu-chen-435760159/">Resume</a>
</div>
</div>
</footer>
</main>
</BaseLayout>
